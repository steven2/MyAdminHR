<mvc:View
	xmlns="sap.uxap"
	xmlns:f="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<m:Page showHeader="false">
		<ObjectPageLayout id="objectPageLayout3">
			<headerTitle>
				<ObjectPageHeader
					objectTitle="Company Organizational Chart"
					objectSubtitle="{i18n>LegalDescriptionTitle}">
					<actions>
						<ObjectPageHeaderActionButton
							id="save"
							text="{i18n>save}"
							hideText="false"
							press=".onSavePressed"
							type="Emphasized"/>
						<ObjectPageHeaderActionButton
							id="cancel"
							text="{i18n>cancel}"
							press=".onCancelPressed"
							hideText="false"/>
					</actions>
				</ObjectPageHeader>
			</headerTitle>	
		</ObjectPageLayout>	
	</m:Page>
</mvc:View>